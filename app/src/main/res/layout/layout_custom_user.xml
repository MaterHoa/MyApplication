<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarUser"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="30dp"
            android:background="@drawable/rounded"
            tools:src="@drawable/common_google_signin_btn_icon_dark_focused"/>

        <TextView
            android:id="@+id/txtNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Viphoamt"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/txtMemberUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Basic member"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/txtMembershipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Membership code"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />
        <TextView
            android:id="@+id/txtCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coupon"
            android:textColor="#000"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/textline"
            />
        <TextView
            android:id="@+id/txtHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="#000"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/textline"
            />

        <TextView
            android:id="@+id/txtCombo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combo"
            android:textColor="#000"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/textline"
            />

        <TextView
            android:id="@+id/txtTermPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Term &amp; Policy"
            android:textColor="#000"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingTop="50dp"
            android:paddingBottom="20dp"
            android:background="@drawable/textline"
            />

        <TextView
            android:id="@+id/txtLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textColor="#FC6E6E"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>